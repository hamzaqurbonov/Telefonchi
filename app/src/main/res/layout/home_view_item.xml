<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="0dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|end"
            android:padding="0dp">

            <ImageView
                android:id="@+id/edit_select"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_border_color_24" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/text_view_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextName"
                android:textSize="14dp"
                android:textColor="#1E7EC1"
                android:textStyle="italic"
                android:padding="0dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/text_view_sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="0dp"
                android:text="Translate"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:textStyle="italic"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:gravity="center|end"
            >

            <ImageView
                android:id="@+id/delete_select"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"
                android:src="@drawable/baseline_auto_delete_24" />

<!--            <ImageView-->
<!--                android:id="@+id/edit_select"-->
<!--                android:layout_width="25dp"-->
<!--                android:layout_height="25dp"-->
<!--                android:layout_below="@+id/delete_select"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:layout_marginTop="14dp"-->
<!--                android:layout_marginEnd="9dp"-->
<!--                android:src="@drawable/baseline_border_color_24" />-->

        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>